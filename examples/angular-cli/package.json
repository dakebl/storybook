{
  "name": "angular-cli",
  "version": "4.0.2-alpha.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "ng build",
    "build-storybook": "npm run storybook:prebuild && build-storybook -s src",
    "e2e": "ng e2e",
    "ng": "ng",
    "start": "ng serve",
    "storybook": "npm run storybook:prebuild && start-storybook -p 9008 -s src/assets",
    "storybook:prebuild": "npm run test:generate-output",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:generate-output": "jest --json --outputFile=addon-jest.testresults.json || true",
    "test:watch": "jest --watch"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/jest-config/",
      "/node_modules/"
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./jest-config/setup.ts",
    "snapshotSerializers": [
      "<rootDir>/../../node_modules/jest-preset-angular/AngularSnapshotSerializer.js",
      "<rootDir>/../../node_modules/jest-preset-angular/HTMLCommentSerializer.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/storybook-static/",
      "angularshots.test.js",
      "dist"
    ],
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/../../node_modules/jest-preset-angular/preprocessor.js"
    }
  },
  "dependencies": {
    "@angular/common": "^6.1.4",
    "@angular/compiler": "^6.1.4",
    "@angular/core": "^6.1.4",
    "@angular/forms": "^6.1.4",
    "@angular/platform-browser": "^6.1.4",
    "@angular/platform-browser-dynamic": "^6.1.4",
    "@ngrx/store": "^6.1.0",
    "core-js": "^2.5.7",
    "rxjs": "^6.2.2",
    "rxjs-compat": "^6.2.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.7.5",
    "@angular/cli": "^6.1.5",
    "@angular/compiler-cli": "^6.1.4",
    "@storybook/addon-actions": "4.0.2-alpha.0",
    "@storybook/addon-backgrounds": "4.0.2-alpha.0",
    "@storybook/addon-centered": "4.0.2-alpha.0",
    "@storybook/addon-jest": "4.0.2-alpha.0",
    "@storybook/addon-knobs": "4.0.2-alpha.0",
    "@storybook/addon-links": "4.0.2-alpha.0",
    "@storybook/addon-notes": "4.0.2-alpha.0",
    "@storybook/addon-options": "4.0.2-alpha.0",
    "@storybook/addon-storyshots": "4.0.2-alpha.0",
    "@storybook/addon-storysource": "4.0.2-alpha.0",
    "@storybook/addons": "4.0.2-alpha.0",
    "@storybook/angular": "4.0.2-alpha.0",
    "@types/jest": "^23.3.1",
    "@types/node": "~10.9.2",
    "@types/storybook__addon-options": "^3.2.2",
    "@types/webpack-env": "^1.13.6",
    "global": "^4.3.2",
    "jasmine-core": "~3.2.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^23.4.2",
    "jest-preset-angular": "^6.0.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "typescript": "^3.0.1"
  }
}
